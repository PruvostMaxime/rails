
<%= form_for :article do |f| %>
<div class="form-group">
  <%= f.label  :titre %>
  <br>
  <%= f.text_field  :titre, placeholder:"Titre de l'article", class: "form-control"%>
  <br>
  <%= f.label  :description %>
  <br>
  <%= f.text_field  :description, class: "form-control"%>
  <br>
  <%= f.label  :contenu %>
  <br>
  <%= f.text_area :contenu, class: "form-control" %>
  <br>
  <%= f.label :auteur %>
  <br>
  <%= f.text_field :auteur, class: "form-control" %>
  <br>
  <%= f.submit "Modifier l'article", class: "btn btn-primary" %>
  <br>
</div>
<% end %>
